{
	"manifest_version": 2,
	"name": "TL;DR",
	"description":"Tai-Lo TTS",
	"version": "0.1",

	"content_scripts": [{
		"matches": [
			"http://*/*",
			"https://*/*",
			"file:///*/*"
		],
		"js": ["tl_dr.js"]
	}],

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},

	"permissions": [
		"tabs",
		"webNavigation",
		"webRequest",
        "webRequestBlocking",
		"http://*/*",
		"https://*/*",
		"file:///*/*"
	]
}